@model ChatBot.ViewModel.ProfessorCourseViewModel
@{
    ViewBag.Title = "AddCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Courses</h2>

@using (Html.BeginForm("Create", "Courses"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Courses.number)
        @Html.TextBoxFor(m => m.Courses.number, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Courses.name)
        @Html.TextBoxFor(m => m.Courses.name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Courses.time)
        @Html.TextBoxFor(m => m.Courses.time, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Courses.location)
        @Html.TextBoxFor(m => m.Courses.location, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Courses.noOfUnits)
        @Html.TextBoxFor(m => m.Courses.noOfUnits, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Courses.professorsId)
        @Html.DropDownListFor(m => m.Courses.professorsId, new SelectList(Model.Professors, "id", "lname"), "Select Professors", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
